doctype html
html
  head
    meta(charset="UTF-8")
    title Hospital Management System
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.4.0/dist/css/bootstrap.min.css", rel="stylesheet")
    style.
      .container {
        margin-top: 50px;
        text-align: center;
      }
      .buttons {
        margin-top: 20px;
      }
      .btn {
        margin-right: 10px;
        border: 2px solid transparent;
        padding: 10px 20px;
        text-decoration: none;
        font-weight: bold;
        color: white;
        border-radius: 20px;
        display: inline-block;
      }
      .btn:hover {
        border-color: white;
      }
      .doctor-btn {
        background-color: green;
      }
      .patient-btn {
        background-color: blue;
      }
      .admin-btn {
        background-color: red;
      }
  body
    .container
      h1 Hospital Management System
      .buttons
        a.btn.doctor-btn(href="/doktor/giris") Doctor Login
        a.btn.patient-btn(href="/patient/homepage") Patient Login
        a.btn.admin-btn(href="/yonetici/secim") Admin Login
