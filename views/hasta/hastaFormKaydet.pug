doctype html
html(lang="en")

  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Save Patient
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi", crossorigin="anonymous")

  body

    .container
      h3 Patient Information
      hr
      p.h4.mb-4 Save Patient

      form(action="/patient/kaydetHasta", method="POST")
        
        input(type="hidden", name="hastaId", value="")
        input(type="text", name="ad", class="form-control mb-4 w-25", placeholder="Name")
        input(type="text", name="soyad", class="form-control mb-4 w-25", placeholder="Surname")
        input(type="text", name="dogumTarihi", class="form-control mb-4 w-25", placeholder="Birthday(yyyy-mm-dd)")
        input(type="text", name="cinsiyet", class="form-control mb-4 w-25", placeholder="Gender(Erkek-KadÄ±n)")
        input(type="text", name="telefon", class="form-control mb-4 w-25", placeholder="Phone")
        input(type="text", name="adres", class="form-control mb-4 w-25", placeholder="Address")
        button.btn.btn-info.col-2(type="submit") Save
